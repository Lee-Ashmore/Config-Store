# This is to add code command to fish
function code
	set location "$PWD/$argv"
	open -n -b "com.microsoft.VSCode" --args $location
end



# Changing the color of ls to default bahavior. I.E no color
function ls
	command ls $argv
end



# A simple function to immitate the !! bash argument
function sudo
	if test "$argv" = !!
		eval command sudo $history[1]
	else
		command sudo $argv
	end
end



# A simple function to make turning off from the command line easier
function poweroff
	command sudo shutdow -h now
end



